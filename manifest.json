{
    "manifest_version": 2,

    "name": "Finsh for Medium",
    "description": "Tally the links in a Medium article at the end",
    "version": "0.1",

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "https://*/"
    ],
    "content_scripts": [{
        "matches": ["https://medium.com/*", "http://medium.com/*"],
        "js": ["action.js"]
    }],

    "background" : {
        "scripts": ["eventPage.js"],
        "persistent": false
    }

}
